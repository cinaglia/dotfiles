alias dk='cd ~/Desktop/'

# Reload bash profile
alias sb='source ~/.bash_profile'

# Folder Navigation / Directory management
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ....='cd ../../../..'
alias ~="cd ~"
alias -- -="cd -"

# Edit crontab file
alias cro="sudo $EDITOR /etc/crontab"

# File size
alias fs="stat -f \"%z bytes\""

# Largest directory sizes
alias dug='du -h | sort -rn | head -n 20'

# Grep processes running
alias pg='ps -ef | grep '

# Grep history
alias hgrep='history | grep -i'

# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
else # OS X `ls`
	colorflag="-G"
fi

# List all files colorized in long format
alias ll="ls -la ${colorflag}"

# List only directories
alias lsd='ls -l | grep "^d"'

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"

# Recursively delete `.DS_Store` files
alias cleanup="find . -name '*.DS_Store' -type f -ls -delete"

# Shortcuts
alias v="vim"
alias h="hg"
alias p='python'
alias t="tmux attach > /dev/null 2>&1 || tmux new-session -s main"
alias :q="exit"

# Git
alias got="git"
alias gut="git"
alias git="hub"
alias g="git"
alias gs="git status"
alias gc="git commit"
alias gco="git checkout"
alias gcm="gco master"
alias gp="git pull"
alias gd="git diff"
alias gl="git l"
alias gf="git f"
alias gdc="git diff --cached"
alias gst="git stash"
alias gpu="git push -u origin head"
alias gpf="confirm && git push -f origin head"
alias gpr="git pull-request -o"

# Nose
alias nosetests="nosetests -x --verbose --logging-level=DEBUG"
